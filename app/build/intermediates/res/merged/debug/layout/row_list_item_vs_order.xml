<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutRowOffer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/margin_tiny" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_normal"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:layout_marginTop="@dimen/margin_normal"
        android:background="@drawable/bg_custom_spinner"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_small" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="@dimen/width_image_map"
                android:layout_height="@dimen/width_image_map"
                android:layout_margin="@dimen/margin_normal" >

                <ProgressBar
                    android:id="@+id/progess"
                    style="@android:style/Widget.ProgressBar.Small.Inverse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />

                <ImageView
                    android:id="@+id/imgFood"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_margin="2dp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/lblFoodName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:singleLine="true"
                    android:text="Shop 1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_normal"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lblCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="category 1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_xsmall" />

                <TextView
                    android:id="@+id/lblCookMethod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="@dimen/margin_normal"
                    android:background="@drawable/bg_textfield"
                    android:drawableRight="@drawable/icon_down"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/margin_small"
                    android:paddingLeft="@dimen/margin_normal"
                    android:paddingRight="@dimen/margin_normal"
                    android:paddingTop="@dimen/margin_small"
                    android:singleLine="true"
                    android:text="cook method 1"
                    android:textSize="@dimen/text_xsmall"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/lblPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:text="$ 12.00"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_xsmall"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/btnAddItem"
                    android:layout_width="@dimen/btn_app_width"
                    android:layout_height="@dimen/icon_width_height"
                    android:layout_gravity="right"                    
                    android:layout_marginRight="@dimen/margin_small"                    
                    android:background="@drawable/bg_button_cryal"
                    android:gravity="center"
                    android:text="@string/txt_add"
                    android:textColor="@color/white_text"
                    android:textSize="@dimen/text_xsmall" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layInCart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_normal"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/btnAddTopping"
                        android:layout_width="@dimen/btn_app_width"
                        android:layout_height="@dimen/icon_width_height"
                        android:layout_margin="@dimen/margin_small"
                        android:background="@drawable/bg_button_cryal"
                        android:gravity="center"
                        android:text="@string/options"
                        android:textColor="@color/white_text"
                        android:textSize="@dimen/text_xsmall" />

                    <TextView
                        android:id="@+id/lblToppingPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/margin_small"
                        android:ellipsize="marquee"
                        android:gravity="left"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:singleLine="true"
                        android:text="@string/content_img"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_small" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_normal"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/btnAddIntroduction"
                        android:layout_width="@dimen/btn_app_width"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_small"
                        android:background="@drawable/bg_button_cryal"
                        android:gravity="center"
                        android:minHeight="@dimen/icon_width_height"
                        android:padding="@dimen/margin_tiny"
                        android:text="@string/Note"
                        android:textColor="@color/white_text"
                        android:textSize="@dimen/text_xsmall" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_small"
                        android:gravity="left"
                        android:text="@string/lbl_quantity"
                        android:textSize="@dimen/text_small" />

                    <TextView
                        android:id="@+id/lblAddQuantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="@dimen/margin_normal"
                        android:layout_marginTop="@dimen/margin_small"
                        android:background="@drawable/bg_text_view"
                        android:drawableRight="@drawable/icon_down_18x11"
                        android:gravity="center"
                        android:paddingBottom="@dimen/margin_small"
                        android:paddingLeft="@dimen/margin_normal"
                        android:paddingRight="@dimen/margin_normal"
                        android:paddingTop="@dimen/margin_small"
                        android:singleLine="true"
                        android:text="1"
                        android:textSize="@dimen/text_xsmall" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/btnDelete"
        android:layout_width="@dimen/icon_width_height"
        android:layout_height="@dimen/icon_width_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/btn_close" />

</RelativeLayout><!-- From: file:/D:/WorkSpaceAndroidStudio/Fruity-DuAn/Fastfood-Mohammed-Alisrawi/app/src/main/res/layout/row_list_item_vs_order.xml -->