<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_header"
        android:background="@drawable/bg_header"
        android:gravity="center"
        android:text="@string/Add_your_feedback"
        android:textColor="@color/white"
        android:textSize="@dimen/text_normal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:layout_marginTop="@dimen/margin_normal"
        android:text="@string/email"
        android:textColor="@color/black_news"
        android:textSize="@dimen/text_small" />

    <EditText
        android:id="@+id/txtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:layout_marginTop="@dimen/margin_normal"
        android:background="@drawable/bg_text_view"
        android:hint="@string/hint_email"
        android:padding="@dimen/margin_small"
        android:textSize="@dimen/text_small" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:layout_marginTop="@dimen/margin_normal"
        android:text="@string/content"
        android:textColor="@color/black_news"
        android:textSize="@dimen/text_small" />

    <EditText
        android:id="@+id/txtContent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_content_textbox"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:layout_marginTop="@dimen/margin_normal"
        android:background="@drawable/bg_text_view"
        android:gravity="top|left"
        android:hint="@string/hint_content"
        android:padding="@dimen/margin_small"
        android:textSize="@dimen/text_small" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_header"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/lblSend"
                android:layout_width="@dimen/btn_app_width"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_btn_green"
                android:gravity="center_horizontal"
                android:padding="@dimen/margin_small"
                android:text="@string/btn_Send"
                android:textColor="@color/white"
                android:textSize="@dimen/text_normal" />

            <TextView
                android:id="@+id/lblCancel"
                android:layout_width="@dimen/btn_app_width"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_normal"
                android:background="@drawable/bg_btn_green"
                android:gravity="center_horizontal"
                android:padding="@dimen/margin_small"
                android:text="@string/btn_Cancel"
                android:textColor="@color/white"
                android:textSize="@dimen/text_normal" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout><!-- From: file:/D:/WorkSpaceAndroidStudio/Fruity-DuAn/Fastfood-Mohammed-Alisrawi/app/src/main/res/layout/dialog_layout_feedback.xml -->