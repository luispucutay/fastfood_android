<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app"
    android:orientation="vertical" >

    <include layout="@layout/layout_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_tiny"
            android:layout_marginRight="@dimen/margin_tiny"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@color/transparent" >

            <TextView
                android:id="@+id/btnDay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/margin_tiny"
                android:layout_weight="1"
                android:background="@drawable/bg_text_button"
                android:gravity="center"
                android:padding="@dimen/margin_normal"
                android:text="@string/lbl_daily"
                android:textColor="@color/white"
                android:textSize="@dimen/text_small" />

            <TextView
                android:id="@+id/btnWeek"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/margin_tiny"
                android:layout_weight="1"
                android:background="@drawable/bg_text_button"
                android:gravity="center"
                android:padding="@dimen/margin_normal"
                android:text="@string/lbl_weekly"
                android:textColor="@color/white"
                android:textSize="@dimen/text_small" />

            <TextView
                android:id="@+id/btnMonth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/margin_tiny"
                android:layout_weight="1"
                android:background="@drawable/bg_text_button"
                android:gravity="center"
                android:padding="@dimen/margin_normal"
                android:text="@string/lbl_monthly"
                android:textColor="@color/white"
                android:textSize="@dimen/text_small" />

            <TextView
                android:id="@+id/btnYear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/margin_tiny"
                android:layout_weight="1"
                android:background="@drawable/bg_text_button"
                android:gravity="center"
                android:padding="@dimen/margin_normal"
                android:text="@string/lbl_yearly"
                android:textColor="@color/white"
                android:textSize="@dimen/text_small" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutLoggedIn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/layoutNotifiMe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:background="@drawable/bg_custom_spinner"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/tbl_header"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/margin_small"
                android:paddingTop="@dimen/margin_small" >

                <TextView
                    android:id="@+id/lbl_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:paddingLeft="@dimen/margin_normal"
                    android:text="@string/lbl_daily"
                    android:textColor="@color/tbl_header_text" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="@string/lbl_n"
                    android:textColor="@color/tbl_header_text" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="@string/lbl_p"
                    android:textColor="@color/tbl_header_text" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="@string/lbl_v"
                    android:textColor="@color/tbl_header_text" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="@string/lbl_d"
                    android:textColor="@color/tbl_header_text" />
            </LinearLayout>

            <com.hcpt.fastfood.widget.pulltorefresh.PullToRefreshListView
                xmlns:ptr="http://schemas.android.com/apk/res-auto"
                android:id="@+id/lsvSong"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@android:color/darker_gray"
                android:dividerHeight="1px"
                ptr:ptrMode="both" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout><!-- From: file:/D:/WorkSpaceAndroidStudio/Fruity-DuAn/Fastfood-Mohammed-Alisrawi/app/src/main/res/layout/activity_dashboard.xml -->